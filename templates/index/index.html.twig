{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex align-content-start flex-wrap flex-row">
    {% for Set in Sets %}
        {% for Manual in Set.getManuals() %}
        <div class="manual-box" data-filter="{{ Set.getNumber() }} {{ Set.getName() }}">
            <div class="manual-title">
                {% if loop.first %}{{ Set.getName() }} {{ Set.getNumber() }}{% endif %}
            </div>
            <div class="manual-pic">
                <a href="{{ path('manual', {'id': Manual.getId()}) }}">
                    <img src="{{ path('manual_cover', {'id': Manual.getId()}) }}" loading="lazy"  alt="{{ Manual.getCovername() }}"/>
                </a>
            </div>
        </div>
        {%  endfor %}
    {% endfor %}
    </div>
{% endblock %}
